{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Django App",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": ["runserver", "--noreload"],
            "django": true,
            "env": {
                "DJANGO_SETTINGS_MODULE": "config.settings"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Django Tests",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": ["test"],
            "django": true,
            "env": {
                "DJANGO_SETTINGS_MODULE": "config.settings"
            },
            "console": "integratedTerminal"
        }
    ]
}